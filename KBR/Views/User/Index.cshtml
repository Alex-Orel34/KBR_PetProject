@model List<KBR.DbStuff.Models.User>
@{
    ViewData["Title"] = "Пользователи";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Пользователи</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Добавить пользователя
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            <h5>Пользователей пока нет</h5>
            <p>Добавьте первого пользователя в систему.</p>
            <a asp-action="Create" class="btn btn-primary">Добавить пользователя</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Логин</th>
                        <th>Email</th>
                        <th>Роль</th>
                        <th class="text-center">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Login</td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge bg-secondary">@user.Role</span>
                            </td>
                            <td class="text-center">
                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Вы уверены, что хотите удалить пользователя @user.Login?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Удалить
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


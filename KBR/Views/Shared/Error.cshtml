@{
    ViewData["Title"] = "Ошибка";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <h1 class="text-danger display-1">Ошибка</h1>
                <h2 class="text-danger">Произошла ошибка при обработке вашего запроса.</h2>
                
                @if (!string.IsNullOrEmpty(ViewBag.RequestId))
                {
                    <p class="mt-4">
                        <strong>Request ID:</strong> <code>@ViewBag.RequestId</code>
                    </p>
                }

                <div class="mt-5">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-house"></i> Вернуться на главную
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


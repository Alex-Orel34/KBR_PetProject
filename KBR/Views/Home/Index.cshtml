@{
    ViewData["Title"] = "Главная";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="text-center mb-5">
                <h1 class="display-4 mb-4">Добро пожаловать в KBR</h1>
                <p class="lead">Система управления личными финансами</p>
            </div>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-list-ul display-4 text-primary mb-3"></i>
                                <h5 class="card-title">Платежи</h5>
                                <p class="card-text">Просматривайте и управляйте своими доходами и расходами</p>
                                <a asp-controller="Payment" asp-action="Index" class="btn btn-primary">Перейти</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-4">
                        <div class="card text-center h-100">
                            <div class="card-body">
                                <i class="bi bi-plus-circle display-4 text-success mb-3"></i>
                                <h5 class="card-title">Добавить платеж</h5>
                                <p class="card-text">Записывайте новые доходы и расходы</p>
                                <a asp-controller="Payment" asp-action="Create" class="btn btn-success">Создать</a>
                            </div>
                        </div>
                    </div>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card text-center h-100">
                                <div class="card-body">
                                    <i class="bi bi-people display-4 text-info mb-3"></i>
                                    <h5 class="card-title">Пользователи</h5>
                                    <p class="card-text">Управление пользователями системы</p>
                                    <a asp-controller="User" asp-action="Index" class="btn btn-info">Управление</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card shadow-lg">
                            <div class="card-body text-center p-5">
                                <i class="bi bi-wallet2 display-1 text-primary mb-4"></i>
                                <h3 class="mb-4">Начните управлять финансами</h3>
                                <p class="text-muted mb-4">
                                    Войдите в систему или зарегистрируйтесь, чтобы начать отслеживать свои доходы и расходы
                                </p>
                                <div class="d-grid gap-2">
                                    <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg">
                                        <i class="bi bi-box-arrow-in-right"></i> Войти
                                    </a>
                                    <a asp-controller="Auth" asp-action="Register" class="btn btn-outline-primary btn-lg">
                                        <i class="bi bi-person-plus"></i> Зарегистрироваться
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

